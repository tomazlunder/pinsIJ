# - Osnovne matematične operacije (+, -, *, /, %)
# - Prenos vrednosti med lokalnimi in globalnimi spremenljivkami
# Pričakovan izhod: 30 10 200 2 0 20 10

var a : integer;
var b : integer;

fun add(x:integer, y:integer):integer = (x+y);

fun sub(x:integer, y:integer):integer = (x-y);

fun mul(x:integer, y:integer):integer = (x*y);

fun div(x:integer, y:integer):integer = (x/y);

fun mod(x:integer, y:integer):integer = (x%y);

fun switchAB(x:integer):integer = (
    {l = a},
    {a = b},
    {b = l},
    1 ) {where var l : integer};

fun main(x:integer):integer = (
    {a = 20},
    {b = 10},
    putInt(add(a,b)), #30
    putInt(sub(a,b)), #10
    putInt(mul(a,b)), #200
    putInt(div(a,b)), #2
    putInt(mod(a,b)), #0
    putInt(a),        #20
    switchAB(0),
    putInt(a),        #10
    777)

